{
  "manifest_version": 2,
  "name": "Technology Radar",
  "version": "1.3",
  "description": "An application for creating a technology radar.",
  "icons": {
    "128": "app/radar-128.png"
  },
  "permissions": [
      {"fileSystem": ["write", "retainEntries", "directory"]},
      "system.display",
      "storage"
  ],
  "app": {
    "background": {
      "scripts": ["app/background.js"]
    }
  },
  "minimum_chrome_version": "31"
}
